<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16sdp"
    android:background="@drawable/bg_dialog_kalori"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_x"
        android:layout_gravity="end"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Kalori"
        android:textColor="@color/text"
        android:fontFamily="@font/jakartab"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center_horizontal"></TextView>
    <TextView
        android:id="@+id/tv_titletujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/jakartab"
        android:text="Tujuan"
        android:textColor="@color/text"
        android:textSize="@dimen/_15sdp"
        ></TextView>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/custom_et4"
      >

        <Spinner
            android:id="@+id/spinner_tujuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"></Spinner>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_titleintensitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/jakartab"
        android:text="Instensitas Aktivitas"
        android:textColor="@color/text"
        android:textSize="@dimen/_15sdp"
        ></TextView>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/custom_et4"
       >

        <Spinner
            android:id="@+id/spinner_intensitas"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            ></Spinner>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_hitung"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/custom_box1"
        android:fontFamily="@font/jakartab"
        android:text="Hitung"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
     ></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/tv_kaloriharian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/jakartab"
        android:text="Kalori Harian Anda"
        android:textColor="@color/text"
        android:textSize="@dimen/_15sdp"

       ></TextView>

    <TextView
        android:id="@+id/et_kalori_harian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_box4"
        android:fontFamily="@font/jakartab"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:text="2000"
        android:textSize="@dimen/_12sdp"
       ></TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/custom_box2"
        android:fontFamily="@font/jakartab"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textSize="@dimen/_16sdp"
        ></androidx.appcompat.widget.AppCompatButton>
</LinearLayout>